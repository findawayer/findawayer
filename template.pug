mixin badge(data)
  img(
    alt=data.name
    src=`https://img.shields.io/badge/-${data.name.replace(/ /g, '_')}-${data.color.slice(1)}?style=flat-square&logo=${data.icon || data.name.toLowerCase().replace(/ /g, '-')}&logoColor=white`
  )

